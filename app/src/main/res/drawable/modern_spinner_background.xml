<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/modern_spinner_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_teal_light" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_teal" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_white" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_teal" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_white" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
</selector>