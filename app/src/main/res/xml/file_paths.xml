<?xml version="1.0" encoding="utf-8"?>
    <paths xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Vanjska pohrana - javni direktoriji -->
        <external-path name="external" path="." />

        <!-- Vanjska pohrana - privatni direktoriji aplikacije -->
        <external-files-path name="external_files" path="." />

        <!-- Unutarnja pohrana - privatni direktoriji aplikacije -->
        <files-path name="files" path="." />

        <!-- Cache direktorij -->
        <cache-path name="cache" path="." />

        <!-- Specifični direktoriji za različite tipove datoteka -->
        <external-files-path name="downloads" path="Downloads/" />
        <external-files-path name="pictures" path="Pictures/" />
        <external-files-path name="documents" path="Documents/" />

        <!-- Root direktorij eksterni storage -->
        <external-path name="external_storage_root" path="." />

        <!-- Specifični putovi za češće korištene lokacije -->
        <external-files-path name="app_images" path="Images/" />
        <external-files-path name="app_videos" path="Videos/" />
        <external-files-path name="app_audio" path="Audio/" />

        <!-- Temp datoteke -->
        <cache-path name="temp_files" path="temp/" />

        <!-- Shared preferences backup -->
        <files-path name="shared_prefs" path="shared_prefs/" />
    </paths>
